<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="About Me"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/fotoprofil"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muhammad Fachry Ramadhan"
            android:textColor="@color/teal_200"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fachrydan@gmail.com"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
            <ImageButton
                android:id="@+id/btn_linkedin"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="Check LinkedIn"
                android:scaleType="fitXY"
                android:src="@drawable/logolinkedin"
                android:adjustViewBounds="true"
                android:textColor="@color/colorAccent"
                android:layout_margin="9dp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/btn_email"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="Sent Email"
                android:scaleType="fitXY"
                android:src="@drawable/ic__email_"
                android:adjustViewBounds="true"
                android:textColor="@color/colorAccent"
                android:layout_margin="9dp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/btn_instagram"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="Check Instagram"
                android:scaleType="fitXY"
                android:src="@drawable/logoinstagram"
                android:adjustViewBounds="true"
                android:layout_margin="9dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>